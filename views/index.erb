<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
  "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" /> 
    <meta http-equiv="X-UA-Compatible" content="IE=8" />
    <title>Open Data Kit Form Builder</title>

    <link rel="stylesheet" type="text/css" href="/stylesheets/styles.css"/>
    <link rel="stylesheet" type="text/css" href="/stylesheets/jquery-ui-1.7.2.custom.css"/>
  </head>
  <body>
    <div class="header">
      <h1>Open Data Kit Form Builder</h1>

      <ul class="toolbar">
        <li><a id="newLink" href="#new" title="Start a new form">New</a></li>
        <li><a id="openLink" href="#open" title="Open an existing form">Open</a></li>
        <li class="separator"></li>
        <li><a id="helpLink" href="#help" title="Get help on using this tool">Help</a></li>
      </ul>
    </div>
    <div class="subheader clearfix">
      <h2>Untitled Form</h2>
      <a id="editTitleLink" href="#edit_title" title="Rename this form">Rename</a>

      <ul class="toolbar">
        <li><a id="undoLink" href="#undo" title="Undo your last action">Undo</a></li>
        <li><a id="redoLink" href="#redo" title="Redo the last undo">Redo</a></li>
        <li class="separator"></li>
        <li><a id="saveLink" href="#save" title="Save the changes to this form">Save</a></li>
        <li><a id="exportLink" href="#export" title="Export this form to XForms XML">Export</a></li>
      </ul>
    </div>
    <div class="mainWrapper">
      <div class="toolPalette">
        <h3>Tools</h3>
        <ul>
          <li><a class="toolButton inputText" rel="inputText">Text</a></li>
          <li><a class="toolButton inputNumeric" rel="inputNumeric">Numeric</a></li>
          <li><a class="toolButton inputDate" rel="inputDate">Date</a></li>
          <li><a class="toolButton inputSelectOne" rel="inputSelectOne">Choose One</a></li>
          <li><a class="toolButton inputSelectMany" rel="inputSelectMany">Select Multiple</a></li>
          <li class="separator"></li>
          <li><a class="toolButton inputGroup" rel="inputGroup">Group</a></li>
          <li><a class="toolButton inputBranch" rel="inputBranch">Branch</a></li>
        </ul>
      </div>
      <div class="workspaceScrollArea">
        <div class="workspaceWrapper">
          <div class="workspace"></div>
        </div>
      </div>
      <div class="propertiesPane">
        <h3>Properties</h3>
        <ul class="propertyList">
        </ul>
      </div>
    </div>

    <script type="text/javascript" src="/javascripts/jquery-1.3.2.js"></script>
    <script type="text/javascript" src="/javascripts/jquery-ui-1.7.2.custom.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery.cloudkit.js"></script>
    <script type="text/javascript" src="/javascripts/util.js"></script>
    <script type="text/javascript" src="/javascripts/property-editor.js"></script>
    <script type="text/javascript" src="/javascripts/control.js"></script>
    <script type="text/javascript" src="/javascripts/toolbutton.js"></script>
    <script type="text/javascript" src="/javascripts/application.js"></script>
    <div id="templates">
      <div class="control">
        <h4 class="controlName">
          <div class="icon"></div>
          <span class="text"></span>
        </h4>
        <div class="controlPreview"></div>
        <dl class="controlProperties clearfix"></dl>
        <div class="controlNextArrow"></div>
      </div>
    </div>
  </body>
</html>